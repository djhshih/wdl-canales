task bam_phi_estimation {
	File bam
	File ref
	String sample_id

	Int memory_gb
	Int cpu

	command <<<
		hts-mobsnvf quantify -M freq -t ffpe \
		-f ${ref} -b ${bam} -J ffpe_obquant_json 
	>>>

	output {
		File phi = "ffpe_obquant_json"
	}
	
	runtime {
	 	memory: "${memory_gb} GB"
		cpu: "${cpu}"
	}
}
