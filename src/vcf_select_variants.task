task vcf_select_variants {
	File input_vcf
	File input_vcf_index
	String sample_id

	Int memory_gb
	Int cpu

	command <<<
		gatk SelectVariants \
		-V ${input_vcf} \
		--exclude-filtered \
		-O ${sample_id}_selected.vcf
	>>>
	
	output {
		File selected_vcf = "${sample_id}_selected.vcf"
		File selected_vcf_index = "${sample_id}_selected.vcf.idx"
	}
	
	runtime {
		docker: "broadinstitute/gatk:4.2.2.0"
		memory: "${memory_gb} GB"
		cpu: "${cpu}"
	}

}
